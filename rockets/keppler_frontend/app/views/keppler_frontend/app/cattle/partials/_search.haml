= search_form_for [:app, @farm, search] do |f|
  .flex-search.mt-4
    .select#select-search
      %select{ name: 'search[field]', class: 'btn btn--medium btn--select'}
        %option{ value: 'serie_number' } Número de serie
        %option{ value: 'short_name' } Nombre corto
        %option{ value: 'typology' } Tipología
        %option{ value: 'weight' } Peso
        %option{ value: 'age' } Edad

    .select-field#serie_number
      = f.search_field :serie_number_cont_any, placeholder: 'Número de serie', class: 'form-control search-bar btn btn--input ml-2'
    .select-field#short_name
      = f.search_field :short_name_cont_any, placeholder: 'Nombre corto', class: 'form-control search-bar btn btn--input ml-2'
    .select-field#typology.ml-2
      .search-typology
        %select#min-typology{ name: 'search[typology]', class: 'btn btn--medium btn--select ml-2' }
          %option Sin tipología
          - @typologies.each do |typology|
            %option{ value: typology } #{typology}
    .select-field#weight.ml-2
      .search-weight
        %select#min-weight.ml-2{ name: 'search[weight][min]', class: 'btn btn--medium btn--select' }
          %option Min
          - %w[30 50 100 150 200 250 300 400 500 600].each do |weight|
            %option{ value: weight } #{weight} KG
        %select#max-weight.ml-2{ name: 'search[weight][max]', class: 'btn btn--medium btn--select' }
          %option Max
          - %w[100 150 200 250 300 400 500 600 800].each do |weight|
            %option{ value: weight } #{weight} KG
    .select-field#age
      .search-age
        %select#min-age.ml-3{ name: 'search[age][min]', class: 'btn btn--medium btn--select' }
          %option Min
          - %w[0 1 2 5 10 15].each do |age|
            %option{ value: age } #{age} años
        %select#max-age.ml-2{ name: 'search[age][max]', class: 'btn btn--medium btn--select' }
          %option Max
          - %w[1 2 5 10 15 20].each do |age|
            %option{ value: age } #{age} años
    = f.submit "Buscar", class: 'btn btn--small btn--select ml-3'
:scss
  .btn--input {
    height: 40px;
  }
  .btn--select {
    font-size: 14px;
  }
  .select {
    background-color: #f8f8f8;
  }
      Hembras preñadas
    = link_to({action: :efectivity_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Efectividad de servicios
    = link_to({action: :vet_efectivity_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Efectividad de veterinarios
    = link_to({action: :services_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Hembras inseminadas
    = link_to({action: :next_births_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Próx. Partos
    = link_to({action: :abort_cows_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Hembras con abortos
    = link_to({action: :bulls_report, format: :pdf}, {class: ' mt-4 mb-4 mr-1 dropdown-item', target: '_blank'}) do
      Toros padrotes
  - when 2, 3
    = link_to({action: :efectivity_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Efectividad de servicios
    = link_to({action: :births_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Partos registrados
    = link_to({action: :twins_report, format: :pdf}, {class: ' py-3 mr-1 dropdown-item', target: '_blank'}) do
      Series con parto morocho

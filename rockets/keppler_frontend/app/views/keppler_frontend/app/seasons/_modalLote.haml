.modal.modal_status.fade{ id: "modalLote", "aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document", style: "max-width: 800px;"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} ×
      .modal-body{ style: "padding: 20px;"}
        .container
          .row
            .col-lg-12
              .float-left
                %h1 Elegir un lote
              .form-padding
                %form
                  .form-padding
                    .row
                     
                      .col-lg-10
                        .keppler-custom-field.form-group.select.required.cow_race_id  
                          %select#cow_race_id.form-control.select.required.form-control.input_custom{"aria-hidden" => "true", name: "", tabindex: "-1", placeholder: 'hola'}
                            -# %option{ selected: true, disabled: true } Selecciona una raza
                            %option Lote 1
                            %option Lote 2
                            %option Lote 3
                            %option Lote 4
                            -# - races.each do |race|
                            -#   %option{ value: race.id }= race.name
                      .col-lg-2
                        .float-right
                          %button.btn.btn_custom.btn--filled.btn--medium{ type: 'submit' }
                            %i.icofont-save
                            Guardar
            .col-lg-12
              .float-left
                %h1 Crear un lote
              .form-padding
                = simple_form_for [@farm, @strategic_lot] do |f|
                  .form-padding
                    .row
                      .col-sm-12.col-md-6
                        = f.input :name, as: :string, label: 'Nombre', label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
                      .col-sm-12.col-md-6
                        = f.input :function, as: :string, label: 'Función', label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
                      .col-sm-12
                        = f.input :description, label: 'Descripción', label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
                      .col-sm-12
                        = f.input :farm_id, input_html: { value: @farm&.id }, as: :hidden #, collection: @farms
                      .col-sm-4
                        .row
                          .col-sm-6
                            .checkbox{ style: 'margin: 3px; display: flex; align-items: center;' }
                              %label{ for: "checkbox" }
                                %input{ type:"checkbox", id: "checkbox", 'checklist-model' => 'check', 'checklist-value' => "", '@click' => ""}
                                %span.cr
                                  %i.cr-icon.icofont-check
                              %label.ml-2 Pajuela
                          .col-sm-6
                            .checkbox{ style: 'margin: 3px; display: flex; align-items: center;' }
                              %label{ for: "checkbox1" }
                                %input{ type:"checkbox", id: "checkbox1", 'checklist-model' => 'check', 'checklist-value' => "", '@click' => ""}
                                %span.cr
                                  %i.cr-icon.icofont-check
                              %label.ml-2 Monta
                      .col-sm-8
                        .float-right
                          %button.btn.btn_custom.btn--filled.btn--medium{ type: 'submit' }
                            %i.icofont-save
                            Crear
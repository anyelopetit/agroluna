                        Registrar aborto
                      = render 'keppler_frontend/app/seasons/modalAbort', season: @season, cow: cow
          - unless @season.type_id.zero? || @pregnants.blank?
            .d-flex.justify-content-between.mt-5.mb-3.mt-4
              .left
                %h1 Crías
            .content-table
              %table
                %thead
                  %tr
                    %th Número de serie
                    %th Nombre corto
                    %th Fecha de Nacimiento
                    %th Días de nacido
                    %th Serie de la Madre
                    %th
                %tbody
                  - @babies.each do |cow|
                    %tr
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.serie_number
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.short_name
                          = image_tag "/assets/keppler_cattle/female", class: 'svg-icon-xs ml-2'
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.birthdate
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.days
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.mother.serie_number

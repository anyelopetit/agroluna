= simple_form_for [:admin, :farm, @farm, @strategic_lot] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_farm_farm_strategic_lots_path(@farm), 'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back') do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            = link_to admin_farm_farm_path(@farm) do
              = @farm.title
            >
            %h3.box-title= t('keppler_farm.models.pluralize.strategic_lots').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12.col-md-6
                    = f.input :name, as: :string
                  .col-xs-12.col-md-6
                    = f.input :function, as: :string
                  .col-xs-12
                    = f.input :description
                  .col-xs-12
                    = f.input :farm_id, input_html: { value: @farm&.id }, as: :hidden #, collection: @farms
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler.actions.save_and_add_another'), name: '_add_other'

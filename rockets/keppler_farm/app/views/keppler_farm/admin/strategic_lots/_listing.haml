.row{ style: 'margin-top: 10px' }
  - @objects.each do |strategic_lot|
    .col-md-4
      .box.slice-box
        .box-header.with-border
          .pull-left{ style: 'display: flex' }
            - if can?(model).destroy_multiple?
              .checkbox{ style: 'margin: 3px' }
                %label{ for: "checkbox-#{strategic_lot.id}" }
                  %input{ type:"checkbox", id: "checkbox-#{strategic_lot.id}", 'checklist-model' => 'check', 'checklist-value' => "#{strategic_lot.id}", '@click' => "listDelete(#{strategic_lot.id})"}
                  %span.cr
                    %i.cr-icon.glyphicon.glyphicon-ok
            %span= strategic_lot.name
          .pull-right
            .item-toolbar
              .item
                = link_to edit_admin_farm_farm_strategic_lot_path(@farm, strategic_lot), class: 'new-menu', title: t('keppler.actions.edit') do
                  %i.icon-pencil
              .item
                = link_to admin_farm_farm_strategic_lot_path(@farm, strategic_lot), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
                  %i.icon-trash
        .box-body
          -# = simple_form_for [:admin, :cattle, @cow], url: admin_farm_farm_assign_operator_path(@farm) do |f|
            .col-sm-8
              = f.input :user_id, collection: @users, label: false, placeholder: 'hola', input_html: { onchange: 'validateOperator()' }
              = f.input :keppler_farm_farm_id, value: @farm.id, as: :hidden
            .col-sm-4
              = f.submit :add, value: t('keppler.actions.add'), id: 'add-operator', disabled: true
          .cows-list
            - strategic_lot.cows.each do |cow|
              .cow-item
                .cow-avatar= image_tag "/assets/keppler_catttle/#{cow.species}"
                .cow-name= cow.user.name
                = link_to({ action: :delete_assignment, farm_id: @farm.id, user_id: cow.user.id }, { method: :delete, class: 'delete-cow', data: { confirm: t('keppler.messages.data_confirm') } }) do
                  %i.bx.bx-trash
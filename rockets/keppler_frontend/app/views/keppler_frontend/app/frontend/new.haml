.container_carousel
  .single-item
    .card_new
      %h1 Datos generales
      %form
        .row
          .col-lg-6
            .form-group
              %label.label_custom--strong Número de serie
              %input.form-control.input_custom
          .col-lg-6
            .form-group
              %label.label_custom--strong Nombre corto
              %input.form-control.input_custom
          .col-lg-12
            .form-group
              %label.label_custom--strong Nombre largo
              %input.form-control.input_custom
          .col-lg-6
            .form-group
              %label.label_custom--strong Especie
              %ul.select
                %li
                  %input#select-close.select_close{name: "select_custom", type: "radio", value: ""}/
                  %span.select_label.select_label-placeholder Escoger la especie
                %li.select_items
                  %input.select_expand{id:"especie", name: "select_custom", type: "radio"}
                  %label.select_closeLabel{for: "select-close"}
                  %ul.select_options
                    - 3.times do |x|
                      %li.select_option
                        %input.select_input{id:"especie-#{x}", name: "select_custom", type: "radio"}
                        %label.select_label{for: "especie-#{x}"} especie #{x}
                  %label.select_expandLabel{for: "especie"}
            .form-group
              %label.label_custom--strong Raza
              %ul.select

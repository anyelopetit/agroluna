= simple_form_for [:admin, :cattle, @species, @race] do |f|
  .container
    .row
      .col-lg-2
        = link_to({action: :index}, {'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back')}) do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t('keppler.models.pluralize.races').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  = f.input :species_id, as: :hidden, input_html: { value: @species.id }
                  .col-xs-6
                    = f.input :name, as: :string
                  .col-xs-6
                    %label= t('activerecord.attributes.abbreviation')
                    %small (Para ser reconocido en los reportes)
                    = f.input :abbreviation, as: :string, label: false
                  .col-xs-12
                    = f.input :description
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler.actions.save_and_add_another'), name: '_add_other'

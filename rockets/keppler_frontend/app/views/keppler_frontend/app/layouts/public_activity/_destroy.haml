%li
  .timeline-item
    %h6.timeline-header.no-border
      %small
        %b
          = activity&.owner&.name
      %small
        - if activity&.trackable_type&.eql?("KepplerCattle::Cow")
          eliminó ganado
          #{activity&.trackable&.species&.name}
          #{activity&.trackable&.race&.name}
          %b
            = activity&.trackable&.try('serie_number')
        - else
          eliminó
          = t("activerecord.attributes.#{activity&.trackable_type&.split('::').last.downcase}")
          de ganado
          #{activity&.recipient&.species&.name}
          #{activity&.recipient&.race&.name}
          %b
            = activity&.recipient.try('serie_number')
      %span.time
        %i.icofont-clock-time
        a las
        = activity&.created_at.to_formatted_s(:time)
        del día
        = activity&.created_at.to_formatted_s(:day)
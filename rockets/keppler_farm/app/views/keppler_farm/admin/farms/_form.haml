= simple_form_for [:admin, :farm, @farm] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_farm_farms_path, 'data-position': 'bottom', 'data-tooltip': t('keppler-farm.actions.back') do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler-farm.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t('keppler-farm.models.pluralize.farms').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    = f.input :logo, as: :keppler_file # , max_size: 225
                  .col-xs-12
                    = f.input :title, as: :string
                  .col-xs-12
                    = f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'mini' } }
                  -# .col-xs-12
                    = f.input :processes
                  .col-xs-12
                    .form-group
                      %label.control-label= t('activerecord.attributes.processes').humanize
                      %select.form-control.select.optional{ name: 'farm[processes][]', id: 'farm_processes', multiple: true, value: f.object.processes&.reverse&.join(", ") }
                        - KepplerFarm::Process.all.each do |process|
                          %option{ value: process.title }= process.title
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler-farm.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler-farm.actions.save_and_add_another'), name: '_add_other'

:javascript
  $('#farm_processes').select2()

- unless @farm.id.nil?
  - @farm.processes.each do |p|
    :javascript
      $('ul.select2-selection__rendered').prepend(
        `<li class="select2-selection__choice" title="lechera" data-select2-id="6">
          <span class="select2-selection__choice__remove" role="presentation">Ã—</span>
          #{p}
        </li>`
      )
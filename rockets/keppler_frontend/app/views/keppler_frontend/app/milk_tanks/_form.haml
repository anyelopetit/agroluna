= simple_form_for [@farm, @milk_tank] do |f|
  = f.input :farm_id, as: :hidden, input_html: { value: @farm.id }
  .form-padding
    .row
      .col-sm-12
        = f.input :name, placeholder: false, label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
      .col-sm-12
        = f.input :milk_capacity, placeholder: false, label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
      .col-sm-12
        = f.input :address, placeholder: false, label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
      .col-sm-12
        .float-right
          %button.btn.btn_custom.btn--filled.btn--medium{ type: 'submit' }
            %i.icofont-save
            Guardar
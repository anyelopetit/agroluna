                        %label.select_label{for: "genero-#{x}"} genero #{x}
                  %label.select_expandLabel{for: "genero"}
            .form-group
              %label.label_custom--strong Fecha de Nacimiento
              %input.form-control.input_custom
            .form-group
              %label.label_custom--strong Color de morro
              %input.form-control.input_custom
            .form-group

.container_custom
  .d-flex.justify-content-end.mb-5
    .toolbar
      %a{ href: '' }
        %i.icofont-trash
      %a{ href: '' }
        %i.icofont-refresh
      %a{ href: '' }
        %i.icofont-download
    .actions
      %a.float-right.mt-4.mb-4{ href: '' }
        %button.btn.btn_custom.btn--filled.btn--medium
          %i.icofont-plus
          Nuevo Status
      %a.float-right.mt-4.mb-4.ml-3{ href: '/edit' }
        %button.btn.btn_custom.btn--filled.btn--medium
          %i.icofont-ui-edit
          Editar
.container_custom
  .row
    .col-lg-4
      .card_show.p-5
        .card_cow
          %img.avatar_cow{ src: 'https://image.flaticon.com/icons/svg/523/523448.svg' }
          .card_cow_content
            %h1 Casera
            %strong 621
            %span Mestizo Brahman 5/8
        .row.mt-5
          .col-lg-6
            %dl
              %dt Fecha de Nacimiento
              %dd 21/03/1993
              %dt Edad (Año-Mes)
              %dd 25-09
              %dt Tipología
              %dd Vaca Prod. Vacia
              %dt Procedencia
              %dd Agua Santa
          .col-lg-6
            %dl
              %dt Color Pelaje
              %dd Hosco Oscuro
              %dt Color Morro
              %dd Blanco
              %dt Borla
              %dd Negro
              %dt Condición corporal
              %dd Condición 1
              %dt Lote estrátegico
              %dd L1 VAC ORD
    .col-lg-4
      .card_show.card_status
        .card_status--title
          %h2 Status
        - 8.times do
          .card_status--inner{"data-toggle" => "modal", "data-target" => "#modalStatus"}
            %dl
              %dt
                %i.icofont-ui-calendar
              %dd 20/01/2018
              %dt
                %i.icofont-dumbbell
              %dd 205kgs
              %dt
                %i.icofont-info
              %dd Vaca preñada
    .col-lg-4
      .card_show#mother
        %h2 Datos de la Madre
        .row
          .col-lg-6
            %dl
              %dt Serie Madre
              %dd 0001
              %dt Nombre de la Madre
              %dd Vaquita
          .col-lg-6
            %dl
              %dt Fecha de Nacimiento
              %dd 11/08/2009
              %dt Raza
              %dd Pura
          .col-lg-6
            %dl
              %dt Asociación 1
              %dd Asociada
              %dt Registro 1
              %dd Registrado
              %dt Tipo
              %dd Tipo
          .col-lg-6
            %dl
              %dt Asociación 2
              %dd Asociada
              %dt Registro 2
              %dd Registrado
              %dt Tipo
              %dd Tipo
      .card_show
        %h2 Datos del Padre
        .row
          .col-lg-6
            %dl
              %dt Serie Padre
              %dd 0001
              %dt Nombre de la Padre
              %dd Vaquita
              %dt Pajuela
              %dd Verdadero
          .col-lg-6
            %dl
              %dt Fecha de Nacimiento
              %dd 11/08/2009
              %dt Raza
              %dd Pura
          .col-lg-6
            %dl
              %dt Asociación 1
              %dd Asociada
              %dt Registro 1
              %dd Registrado
              %dt Tipo
              %dd Tipo
          .col-lg-6
            %dl
              %dt Asociación 2
              %dd Asociada
              %dt Registro 2
              %dd Registrado
              %dt Tipo
              %dd Tipo
= render 'keppler_frontend/app/frontend/partials/modal_status'
.app_wrapper.pb-5
  .container.d-flex.justify-content-between
    .left
      %h1= title
    .right
      = link_to (:back == request.url ? :back : farm_cheese_processes_path(@farm)) do
        %button.btn.btn_custom.btn--medium.mt-4.mb-4
          %i.icofont-arrow-left
          Atr√°s
  .container_carousel
    .card_new
      = simple_form_for [@farm, @cheese_type] do |f|
        .form-padding
          .row
            .col-sm-12
              = f.input :name, label: 'Nombre', label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
            .col-sm-12
              = f.input :liters_needed, label: 'Litros necesitados', label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
            .col-sm-12
              .float-right
                %button.btn.btn_custom.btn--filled.btn--medium{ type: 'submit' }
                  %i.icofont-save
                  Guardar

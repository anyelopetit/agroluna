= simple_form_for [:app, @farm, @strategic_lot] do |f|
  .form-padding
    .row
      .col-sm-12.col-md-6
        = f.input :name, as: :string, label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
      .col-sm-12.col-md-6
        = f.input :function, as: :string, label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
      .col-sm-12
        = f.input :description, label_html: { class: 'label_custom--strong' }, input_html: { class: 'form-control input_custom' }
      .col-sm-12
        = f.input :farm_id, input_html: { value: @farm.id }, as: :hidden #, collection: @farms
      .col-sm-12
        .float-right
          %button.btn.btn_custom.btn--filled.btn--medium{ type: 'submit' }
            %i.icofont-save
            Guardar
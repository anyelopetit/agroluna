        - if @season.phase.to_i.eql?(1)
          #index-container
            .d-flex.justify-content-between.mt-5.mb-3.mt-4
              .left
                %h1 Inseminadas
              .right
                .d-flex.justify-content-end
                  .d-flex.mt-4.mb-4
                    = render 'close_phase'
            .content-table
              %table
                - if @inseminated_cows.blank?
                  %thead
                    %tr
                      %th No se encontraron hembras inseminadas
                - else
                  %thead
                    %tr
                      %th
                      %th Número de serie
                      %th Nombre corto
                      %th Fecha de Servicio
                      %th Pajuela Usada
                      %th
                %tbody
                  - @inseminated_cows.each do |cow|
                    %tr
                      %td
                        .checkbox{ style: 'margin: 3px' }
                          %label{ for: "checkbox-#{cow.id}" }
                            %input{ type:"checkbox", id: "checkbox-#{cow.id}", 'checklist-model' => 'check', 'checklist-value' => "#{cow.id}", '@click' => "listDelete(#{cow.id})"}
                            %span.cr
                              %i.cr-icon.icofont-check
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.serie_number
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.short_name
                          = image_tag "/assets/keppler_cattle/female", class: 'svg-icon-xs ml-2'
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.status.date
                      %td
                        = link_to farm_cow_path(@farm, cow) do
                          = cow.status.insemination&.serie_number
                      %td
                        - if Date.today > cow.status.date + 60.days
                          %button.btn.btn_custom.btn--filled.btn--medium{'data-target': "#modalPregnant-#{cow.id}", 'data-toggle': 'modal' }
                            %i.icofont-plus
                            Registrar preñez
                          = render 'keppler_frontend/app/seasons/modalPregnant', season: @season, cow: cow
            - unless @season.type_id.zero? || @pregnants.blank?
              .d-flex.justify-content-between.mt-5.mb-3.mt-4
                .left
                  %h1 Preñadas
              .content-table
                %table
                  %thead
                    %tr
                      %th Número de serie
                      %th Nombre corto
                      %th Fecha de Servicio
                      %th Pajuela Usada
                      %th{ colspan: 2 }
                  %tbody
                    - @pregnants.each do |cow|
                      %tr
                        %td
                          = link_to farm_cow_path(@farm, cow) do
                            = cow.serie_number
                        %td
                          = link_to farm_cow_path(@farm, cow) do
                            = cow.short_name
                            = image_tag "/assets/keppler_cattle/female", class: 'svg-icon-xs ml-2'
                        %td
                          = link_to farm_cow_path(@farm, cow) do
                            = cow.status.date
                        %td
                          = link_to farm_cow_path(@farm, cow) do
                            = cow.status.insemination&.serie_number
        - else

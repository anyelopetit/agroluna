.app_wrapper
  #index-container
    %ul#moduleTabs.nav.nav-tabs.mt-4{role: "tablist"}
      %li.nav-item
        -# %a#mfg-tab.nav-link.active{"aria-controls" => "mfg", "aria-selected" => "true", "data-toggle" => "tab", href: "#mfg", role: "tab"}
        -# %a#mfg-tab.nav-link.active{ href: "#mfg", role: "tab" }
        = link_to(action_name.eql?('index') ? '#' : {action: :index}, { class: "nav-link #{'active' if action_name.eql?('index')}" }) do
          Activos (#{@active_cows.size})
      %li.nav-item
        -# %a#ale-tab.nav-link{"aria-controls" => "ale", "aria-selected" => "false", "data-toggle" => "tab", href: "#ale", role: "tab"}
        = link_to(action_name.eql?('index_inactive') ? '#' : {action: :index_inactive}, { class: "nav-link #{'active' if action_name.eql?('index_inactive')}" }) do
          Inactivos (#{@inactive_cows.size})
    %hr{ :style => "margin-top: 0;width: 90%; margin-bottom: 20px;"}
    .container_custom
      = render 'keppler_frontend/app/cattle/partials/search', farm: farm, search: search
      .d-flex.justify-content-end.content-btn
        -# .toolbar
          .toolbar-item
            -# %a.tool-btn{ 'data-confirm': t('keppler.messages.data_confirm'), 'data-method': 'delete', 'v-bind:href': 'link', rel: 'nofollow', ':class': '{disabled: !checks}' }
            = link_to app_farm_strategic_lot_destroy_multiple_path(@farm), method: :delete, class: 'destroy_multiple' do
              %i.icofont-trash
        - if action_name.eql?('index')
          - if cows.size < @active_cows.size
            .toolbar
              .toolbar-item
                = link_to 'Mostrar todos', app_farm_cows_path(farm)
        - else
          - if cows.size < @inactive_cows.size
            .toolbar
              .toolbar-item
                = link_to 'Mostrar todos', app_farm_cows_inactive_path(farm)
        .actions.d-none.d-sm-block
          .float-right.mb-4
            - unless cows.size.zero?
              = link_to({action: action_name.to_sym, format: :pdf}, {class: ' mt-4 mb-4 mr-1', target: '_blank'}) do
                %button.btn.btn_custom.btn--filled.btn--medium
                  %i.icofont-clip-board
                  Reporte
            %a.mt-4.mb-4.open-status-history
              %button.btn.btn_custom.btn--filled.btn--medium
                %i.icofont-clock-time
                Historial
            %a.mt-4.mb-4.ml-1{ href: app_farm_cow_new_path(farm) }
              %button.btn.btn_custom.btn--filled.btn--medium
                %i.icofont-plus
                Agregar
        .actions_movil.d-sm-none.mt-4
          .float-right
            %a#profileDropdown.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: "#", role: "button"}
              %button.btn.btn_custom.btn--filled.btn--medium
                %i.icofont-simple-down
                Acciones
            .dropdown-menu.profile_dropdown{"aria-labelledby" => "profileDropdown"}
              %a.mt-4.mb-4.ml-1{ href: app_farm_cow_new_path(farm),class: "dropdown-item" }
                Agregar
              %a.open-status-history{class: "dropdown-item"}
                Historial
              = link_to({action: :index, format: :pdf}, {class: ' mt-4 mb-4 mr-1 dropdown-item', target: '_blank'}) do
                Reporte
              
      
      = render 'keppler_frontend/app/cattle/partials/cattle_table', cows: cows

= render 'keppler_frontend/app/layouts/public_activity/history'

